@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.GoalsPage>
@using ContentModels = QuantumWebsite.Models;
@{
	Layout = "main.cshtml";
}
<section>
        <div class="bannerSingle img-fluid">
            <div class="message-topics">
                <h2 class="message-heading-topics">@Model.Value("bannerTitle")</h2>
                <p>@Model.Value("bannerDescribe")</p>
            </div>
        </div>
</section>

<!-- Aim section start -->
<section class="aim-section">
    <div class="container">
        <div class="row align-items-center py-5">
            @{
                     var blockList = Model.AimCard;
            }
            @if (blockList != null)
                {
                    foreach (var block in blockList)
                    {
                        if (block.Content is ContentModels.CardContent cardContent)
                        {
                            <div class="col-lg-4 col-sm-6 mb-5">
                                <div class="aim-card align-items-center">
                                    <div class="aim-img">
                                        <img src="@cardContent.Image.Url()" />
                                    </div>
                                    <div class="align-items-center">
                                        <h4>@cardContent.Title</h4><br>
                                        <p>@cardContent.Description</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
        </div>
    </div>
</section>
<!-- Aim section end -->